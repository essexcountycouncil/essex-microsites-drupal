#!/usr/bin/env bash

## Run 'drush cr' for the project
##      Alias for 'fin cc [scope]'
##
## Usage: fin cr [scope] (default: all)
##

source ${DOCKSAL_PATH}/.docksal/helpers
ensure_containers_up

check_override $@

if [[ -z $1 ]]; then
  echo-green "clear all caches"
  fin cc all
else
  echo-green "clear $@ cache"
  fin cc $@
fi
