#!/usr/bin/env bash

## Enable or disable developer tools on the site
##
## Usage: fin devel enable|disable
##           enable      Enable developer tools known to the site
##           disable     Disable developer tools

source ${DOCKSAL_PATH}/.docksal/helpers
ensure_containers_up

check_override $@

cd ${DOCROOT_PATH}

if [[ $1 == "enable" ]]; then
  fin drush en -y devel kint stage_file_proxy
fi

if [[ $1 == "disable" ]]; then
  fin drush dis -y devel kint stage_file_proxy
  fin drush pmu -y devel kint stage_file_proxy
fi
