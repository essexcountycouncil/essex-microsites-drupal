#!/usr/bin/env bash

## Compiles SASS to CSS in the theme folder using compass.
##
## Usage: fin css-compile
##

source ${DOCKSAL_PATH}/.docksal/helpers
ensure_containers_up

check_override $@

cd ${THEME_PATH}

echo-green 'Checking for installed bundles'
fin exec bundle install
echo-green 'Compiling CSS'
fin exec bundle exec compass compile
